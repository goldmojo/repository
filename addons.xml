<?xml version="1.0" encoding="UTF-8"?>
<addons>
	<addon id="plugin.video.melodice" name="Unofficial Melodice player" version="1.0.0" provider-name="goldmojo">
		<requires>
			<import addon="xbmc.python" version="2.14.0"/>
			<import addon="plugin.video.youtube" version="6.5.2"/>
		</requires>
		<extension point="xbmc.python.script" library="addon.py">
			<provides>video</provides>
		</extension>
		<extension point="xbmc.addon.metadata">
			<platform>all</platform>
			<summary lang="en">Unofficial access to Melodice.org playlists</summary>
			<description lang="en">Search for a game on Melodice.org website and play associated playlist</description>
			<license>GNU General Public License, v2</license>
			<language></language>
			<source>https://github.com/goldmojo/plugin.video.melodice</source>
			<assets>
				<icon>icon.png</icon>
			</assets>
			<news>Initial release</news>
		</extension>
	</addon>
	<addon id="repository.goldmojo" name="goldmojo Add-on Repository" version="0.0.1" provider-name="goldmojo">
		<requires>
			<import addon="xbmc.python" version="2.20.0"/>
		</requires>
		<extension point="xbmc.addon.repository" name="goldmojo Add-on Repository">
			<info compressed="false">https://raw.githubusercontent.com/goldmojo/repository/master/addons.xml</info>
			<datadir zip="true">https://raw.githubusercontent.com/goldmojo/repository/master/zips/</datadir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>goldmojo's repo of Kodi addons</summary>
            <description>This is a repository of Kodi addons developed by goldmojo</description>
			<platform>all</platform>
		</extension>
	</addon>
</addons>
